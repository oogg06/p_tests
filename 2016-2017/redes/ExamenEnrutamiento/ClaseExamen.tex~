\documentclass{examen}

\begin{document}
\modulo{Redes}


\pregunta{Examina las tablas siguientes de tres router conectados en línea (A--B--C). Al router A llega un datagrama por la Interfaz FastEthernet 0/0 cuya dirección de destino es 161.63.45.81. Explica lo que ocurre a continuación. Recuerda que 0.0.0.0 significa ``en cualquier otro caso''}{3}


\begin{table}[h]
	\centering
		\begin{tabular}{|c|c|c|}
			\hline
			Interfaz & FastEthernet 0/0 & IP: 1.0.0.1 \\
			\hline
			\hline
			Interfaz & FastEthernet 0/1 & IP: 2.0.0.1 \\
			\hline
			\hline
			10.0.0.0 & 255.255.255.0 & 1.0.0.2\\
			\hline 
			20.0.0.0 & 255.255.255.0 & 2.0.0.2\\
			\hline 
			161.63.45.0 & 255.255.255.0 & 2.0.0.2\\
			\hline 
			30.0.0.0 &  255.255.255.0 & 2.0.0.2\\
			\hline 
			40.0.0.0 &  255.255.255.0 & 1.0.0.2\\
			\hline
		\end{tabular}
	\caption{Configuracion del router A}
	\label{tab:Configuraciones}
\end{table}


\begin{table}[h]
	\centering
		\begin{tabular}{|c|c|c|}
			\hline
			Interfaz & FastEthernet 0/0 & IP: 2.0.0.2 \\
			\hline
