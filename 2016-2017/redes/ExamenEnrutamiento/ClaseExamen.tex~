			\hline
			\hline
			10.0.0.0 & 255.255.255.0 & 2.0.0.1\\
			\hline 
			30.0.0.0 &  255.255.255.0 & 2.0.0.1\\
			\hline 
			40.0.0.0 &  255.255.255.0 & 1.0.0.2\\
			\hline
			0.0.0.0 & 255.255.255.255 & 3.0.0.2 \\
			\hline
		\end{tabular}
	\caption{Configuracion del router B}
	\label{tab:ConfiguracionesB}
\end{table}

\begin{table}[h]
	\centering
		\begin{tabular}{|c|c|c|}
